<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- CUSTOM STYLES-->
    <link href="~/Assets/css/custom.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/Assets/css/font-awesome.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand">
                    <img src="@Url.Content("~/Assets/agrani_bank.gif")" alt="Agrani Bank Ltd." class="img-responsive" />
                </div>

                @*@Html.ActionLink("OPUS HRM", "Index", "Home", null, new { @class = "navbar-brand" })*@
            </div>
            @Html.Partial("_LoginPartial")
            @*<div style="color: white;padding: 15px 50px 5px 50px;float: right;font-size: 16px;"><a href="#" class="btn btn-danger square-btn-adjust">Logout</a></div>*@
        </nav>
        <!-- /. NAV TOP  -->

        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <br /><br />
                <ul class="nav" id="main-menu">
                    @if (HttpContext.Current.User.Identity.Name.ToLower() == "admin")
                    {
                        <li>
                            <a href="#"><i class="fa fa-male fa-fw"></i> Salary Fixation</a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("Index", "Fixation")"><i class="fa fa-calendar fa-fw"></i> Fixation Calculator</a>
                                </li>
                            </ul>
                        </li>
                    }
                    <li>
                        <a href="#"><i class="fa fa-male fa-fw"></i> View Process</a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("SingleView", "Fixation")"><i class="fa fa-calendar fa-fw"></i> Single View</a>
                            </li>
                            <li>
                                <a href="@Url.Action("BatchView", "Fixation")"><i class="fa fa-calendar fa-fw"></i> Batch View</a>
                            </li>
                        </ul>
                    </li>
                    @if (HttpContext.Current.User.Identity.Name.ToLower() == "admin")
                    {
                        <li>
                            <a href="#"><i class="fa fa-wrench fa-fw"></i> Settings</a>
                            <ul class="nav nav-second-level">
                                @*<li>
                                        <a href="@Url.Action("SingleView", "Fixation")"><i class="fa fa-calendar fa-fw"></i> Access Page Setting</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("BatchView", "Fixation")"><i class="fa fa-calendar fa-fw"></i> Access Page List</a>
                                    </li>*@
                                <li>
                                    <a href="@Url.Action("Register", "Account")"><i class="fa fa-calendar fa-fw"></i> Create User</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("UserList", "Account")"><i class="fa fa-calendar fa-fw"></i> User List</a>
                                </li>
                            </ul>
                        </li>
                    }

                </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->


        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()

                    </div>


                </div>
                <!-- /. ROW  -->

            </div>
            <footer>
                <p class="center">&copy; @DateTime.Now.Year - Developed By <a href="http://www.opus-bd.com/">Opus Technology Ltd.</a> </p>
            </footer>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!-- METISMENU SCRIPTS -->
    <script src="~/Assets/js/jquery.metisMenu.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~/Assets/js/custom.js"></script>
</body>
</html>
